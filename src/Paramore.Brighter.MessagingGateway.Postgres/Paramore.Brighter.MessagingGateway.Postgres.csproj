<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Description>PostgreSQL messaging gateway implementation for Paramore.Brighter Command Processor. Provides decoupled message transport using PostgreSQL as a message queue with database-backed reliability and LISTEN/NOTIFY support.</Description>
    <Authors>Rafael Andrade</Authors>
    <TargetFrameworks>$(BrighterCoreTargetFrameworks)</TargetFrameworks>
    <PackageTags>PostgreSQL;Postgres;Message Gateway;Database;LISTEN;NOTIFY;Command;Event;Service Activator;Decoupled;Invocation;Messaging;Remote;Command Dispatcher;Command Processor;Request;Service;Task Queue;Work Queue;Retry;Circuit Breaker;Availability;Brighter</PackageTags>
    <Nullable>enable</Nullable>
  </PropertyGroup>
  
  <ItemGroup>
    <ProjectReference Include="..\Paramore.Brighter.PostgreSql\Paramore.Brighter.PostgreSql.csproj" />
  </ItemGroup>
</Project>
