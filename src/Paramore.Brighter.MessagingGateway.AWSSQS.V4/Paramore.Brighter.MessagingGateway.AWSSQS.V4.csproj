<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Description>Amazon SQS messaging gateway implementation for Paramore.Brighter Command Processor (AWS SDK v4). Provides decoupled message transport using Amazon Simple Queue Service with support for SNS notifications and AWS security integration.</Description>
    <Authors>Rafael Andrade</Authors>
    <TargetFrameworks>$(BrighterTargetFrameworks)</TargetFrameworks>
    <Nullable>enable</Nullable>
    <PackageTags>AWS;SQS;SNS;Amazon;Message Gateway;AWS SDK v4;Command;Event;Service Activator;Decoupled;Invocation;Messaging;Remote;Command Dispatcher;Command Processor;Request;Service;Task Queue;Work Queue;Retry;Circuit Breaker;Availability;Brighter</PackageTags>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Paramore.Brighter\Paramore.Brighter.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Polly.Contrib.WaitAndRetry" />
    <PackageReference Include="AWSSDK.SecurityToken" VersionOverride="$(AWSSecurityTokenV4)" />
    <PackageReference Include="AWSSDK.SimpleNotificationService" VersionOverride="$(AWSSDKSimpleNotificationServiceV4)" />
    <PackageReference Include="AWSSDK.SQS" VersionOverride="$(AWSSQSV4)" />
  </ItemGroup>
</Project>

