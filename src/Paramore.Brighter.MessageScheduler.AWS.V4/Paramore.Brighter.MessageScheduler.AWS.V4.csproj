<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>AWS EventBridge Scheduler integration for Paramore.Brighter Command Processor (AWS SDK v4). Provides message scheduling capabilities using Amazon EventBridge Scheduler for delayed message delivery and recurring tasks.</Description>
    <Authors>Rafael Andrade</Authors>
    <TargetFrameworks>$(BrighterTargetFrameworks)</TargetFrameworks>
    <PackageTags>AWS;EventBridge;Scheduler;Message Scheduling;Delayed Messages;Amazon;Cloud;SQS;Command Processor;AWS SDK v4;Brighter</PackageTags>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Paramore.Brighter.MessagingGateway.AWSSQS.V4\Paramore.Brighter.MessagingGateway.AWSSQS.V4.csproj" />
    <ProjectReference Include="..\Paramore.Brighter\Paramore.Brighter.csproj"/>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AWSSDK.IdentityManagement" VersionOverride="$(AWSSDKIdentityManagementV4)" />
    <PackageReference Include="AWSSDK.Scheduler" VersionOverride="$(AWSSDKSchedulerV4)" />
  <PackageReference Include="AWSSDK.SecurityToken" />
  </ItemGroup>
</Project>
