<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>AWS EventBridge Scheduler integration for Paramore.Brighter Command Processor. Provides message scheduling capabilities using Amazon EventBridge Scheduler for delayed message delivery and recurring tasks.</Description>
    <Authors>Rafael Andrade</Authors>
    <TargetFrameworks>$(BrighterTargetFrameworks)</TargetFrameworks>
    <PackageTags>AWS;EventBridge;Scheduler;Message Scheduling;Delayed Messages;Amazon;Cloud;SQS;SNS;Command Processor;Brighter</PackageTags>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Paramore.Brighter.MessagingGateway.AWSSQS\Paramore.Brighter.MessagingGateway.AWSSQS.csproj"/>
    <ProjectReference Include="..\Paramore.Brighter\Paramore.Brighter.csproj"/>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AWSSDK.IdentityManagement"/>
    <PackageReference Include="AWSSDK.Scheduler"/>
  </ItemGroup>
</Project>
