<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>PostgreSQL inbox provider for Paramore.Brighter Command Processor. Enables inbox pattern implementation for idempotent command and event handling using PostgreSQL as the persistence layer.</Description>
    <TargetFrameworks>$(BrighterCoreTargetFrameworks)</TargetFrameworks>
    <PackageTags>PostgreSQL;Database;Inbox;Idempotent;Command;Event;Command Processor;Relational Database;Brighter</PackageTags>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Paramore.Brighter.PostgreSql\Paramore.Brighter.PostgreSql.csproj" />
    <ProjectReference Include="..\Paramore.Brighter\Paramore.Brighter.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Npgsql" />
  </ItemGroup>
</Project>
