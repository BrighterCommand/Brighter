<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Hangfire integration for Paramore.Brighter Command Processor. Provides message scheduling capabilities using Hangfire for background job processing, delayed message delivery and recurring tasks.</Description>
    <Authors>Rafael Andrade</Authors>
    <TargetFrameworks>$(BrighterTargetFrameworks)</TargetFrameworks>
    <PackageTags>Hangfire;Scheduler;Message Scheduling;Delayed Messages;Command Processor;Brighter</PackageTags>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <SignAssembly>false</SignAssembly>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Paramore.Brighter\Paramore.Brighter.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Hangfire.Core" />
  </ItemGroup>

</Project>
