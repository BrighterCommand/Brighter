<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>SQLite provider for Paramore.Brighter Command Processor. Provides common components for connecting to SQLite, including connection and transaction management for inbox, outbox, and messaging gateway implementations.</Description>
    <Authors>Ian Cooper</Authors>
    <TargetFrameworks>$(BrighterTargetFrameworks)</TargetFrameworks>
    <PackageTags>SQLite;Database;Embedded Database;Connection Provider;Transaction;Command;Event;Command Processor;Brighter</PackageTags>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Data.Sqlite"/>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Paramore.Brighter\Paramore.Brighter.csproj"/>
  </ItemGroup>
</Project>
