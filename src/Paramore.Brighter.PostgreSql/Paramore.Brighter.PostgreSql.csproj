<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>PostgreSQL provider for Paramore.Brighter Command Processor. Provides common components for connecting to PostgreSQL, including connection and transaction management for inbox, outbox, and messaging gateway implementations.</Description>
    <Authors>Sam Rumley</Authors>
    <TargetFrameworks>$(BrighterCoreTargetFrameworks)</TargetFrameworks>
    <PackageTags>PostgreSQL;Postgres;Database;Connection Provider;Transaction;Command;Event;Command Processor;Brighter</PackageTags>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Npgsql" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Paramore.Brighter\Paramore.Brighter.csproj" />
  </ItemGroup>

</Project>
